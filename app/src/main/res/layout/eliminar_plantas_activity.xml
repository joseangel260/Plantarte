<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EliminarPlantasActivity">

    <TextView
        android:id="@+id/textViewEliminarPlantas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fondoTexto"
        android:fontFamily="@font/ghibotalk"
        android:text="@string/eliminarPlanta"
        android:textAlignment="center"
        android:textColor="#47CC4B"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/gridLayoutEliminarPlantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>
    </ScrollView>
</LinearLayout>
