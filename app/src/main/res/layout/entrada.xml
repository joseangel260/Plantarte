<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/textBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="9dp"
        android:background="#DAF3DB"
        android:fontFamily="@font/ghibotalk"
        android:foregroundTint="#0C0808"
        android:text="@string/text_bienvenido"
        android:textAlignment="center"
        android:textColor="#8AE88D"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_below="@id/textBienvenido"
        android:layout_marginTop="34dp"
        android:src="@drawable/logoapp" />

    <!-- Botón para ingresar al jardín -->

    <Button
        android:id="@+id/BtnEntrar"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/boton_redon_entrar"
        android:backgroundTint="#4CAF50"
        android:drawableTint="#FEFFFF"
        android:fontFamily="@font/ghibotalk"
        android:text="@string/button_acceder"
        android:textColor="#0A0C0A"
        android:textSize="34sp"
        android:textStyle="bold" />
    <VideoView
        android:id="@+id/hacerCLick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnEntrar"
        android:layout_marginTop="20dp" />
</RelativeLayout>
